// 新人礼包
.xrlbbox
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 100%;
.footer-img-xrlb
  width: 7.5rem;
.xrlb
  flex: 1;
  margin: 0 auto;
  padding-top: 0.4rem;
  box-sizing: border-box;
  width: 6.9rem;
  min-height: 100%;
.xrlb-title
  margin: 0 auto;
  width: 4.39rem;
.xrlb-btn
  margin: 0.2rem auto;
  background: url('http://dev-pet-avatar.oss-cn-beijing.aliyuncs.com/html5/15646290629664991170.png') no-repeat
  background-size: 100% 100%
  -moz-background-size: 100% 100%
  -webkit-background-size: 100% 100%
  width: 5.8rem;
  height 1.2rem;
  text-align: center;
  line-height: 1rem;
  color: #ffffff;
  >img
    width: 100%;
    display: inline-block;
    
.xrlb-content
  margin: 0 auto;
.coupon-list
  margin: 0.4rem 0;
.coupon-item{
  margin: 0 auto;
  display: flex;
  margin-bottom: 0.1rem;
  width: 6rem;
  height: 1.5rem;
  background-image: url('http://dev-pet-avatar.oss-cn-beijing.aliyuncs.com/miniprogram/15238731422631099434.png');
  background-size: 100% 100%;
  color: #fff;
}
.coupon-item > div{
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  height: 1.5rem;
}
.coupon-item > div:nth-child(1){
  align-items: center;
  width: 1.8rem;
  line-height: 1.5rem;
}
.coupon-item > div:nth-child(2){
  flex-direction: column;
  padding: 0 0.3rem;
  box-sizing: border-box;
  width: 4.2rem;
  height: 1.5rem;
}
.coupon-icon{
  font-size: 0.4rem;
}
.coupon-amount{
  font-size: 0.6rem;
}
.coupon-name{
  font-size: 0.3rem;
}
.coupon-desc{
  font-size: 0.2rem;
}
.coupon-item > view > text{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
// 底部图片
.footer-img
  position: absolute;
  bottom: 0;
  width: 7.5rem;
.popup
  position: relative;
  width: 100%;
  height: 100%;
  > img
    position: absolute;
    top: 0;
    right: 0.3rem;
    width: 4.8rem;
