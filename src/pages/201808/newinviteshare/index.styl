body
  background-color: #FFF8D8;
.container
  width: 100%;
  height: 100%;
.index
  padding-top: 0.3rem;
  padding-bottom: 1.28rem;
  box-sizing: border-box;
.global-tip
  font-size: 0.24rem;
  text-align: center;
  color: #000;
  white-space: nowrap;
.loading
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background: #ecf0f1;
  > img
    transform: scale(0.5);
// 新用户
.newuser
  box-sizing: border-box;
  .newuser-title
    height:1.2rem;
    width:100%;
    text-align: center;
    margin-top: 0.4rem;
    > img 
        display: inline-block;
        height 100%;
  .newuser-content
    position: relative;
    width: 100%;
    // height: 10rem;
    padding-top: 2.6rem;
    box-sizing: border-box;
    font-family: PingFangSC-Regular;
    font-size: 0.28rem;
    color: #999999;
    letter-spacing: 0;
    > img
      position: absolute;
      left: 50%;
      margin-left: -2.81rem;
      top: 0.8rem;
      z-index 2;
      width: 5.62rem;
      height: 3.43rem;
.formbox
    width: 6.4rem;
    height: 6.55rem;
    background: url('http://dev-pet-avatar.oss-cn-beijing.aliyuncs.com/html5/15646290630537218933.png') no-repeat
    background-size: 100% 100%
    -moz-background-size: 100% 100%
    -webkit-background-size: 100% 100%
    position relative;
    margin: 0 auto;
.newuser-form
    position: absolute;
    width: 5.8rem;
    left: 50%;
    margin-left: -2.9rem;
    top: 2.5rem;
    input
      font-size: 0.28rem;
.form-cellPhone,.form-imgcode,.form-code
  position: relative;
  padding-left: 0.3rem;
  box-sizing: border-box;
  width: 100%;
  height: 0.8rem;
  line-height: 0.8rem;
  background: #FFFFFF;
  border-radius: 5px;
  margin-bottom: 0.2rem;
  > input
    width: 100%;
    height: 0.8rem;
.form-imgcode > img
  position: absolute;
  right: 0.07rem;
  top: 0.07rem;
  width: 1.73rem;
  height: 0.65rem;
.form-code > span
  position: absolute;
  right: 0;
  top: 0;
  width: 1.8rem;
  height: 0.8rem;
  line-height: 0.8rem;
  text-align: center;
  background-image: linear-gradient(0deg, #FF521D 0%, #FF7B2A 100%);
  border-radius: 0 4px 4px 0;
  font-size: 0.24rem;
  color: #FFFFFF;
  letter-spacing: -0.37px;
  &.grey
    background: #bbb;
.newuser-btn
  background: url('http://dev-pet-avatar.oss-cn-beijing.aliyuncs.com/html5/15646290629664991170.png') no-repeat
  background-size: 100% 100%
  -moz-background-size: 100% 100%
  -webkit-background-size: 100% 100%
  position: absolute;
  width: 5.8rem;
  height 1.2rem;
  left: 50%;
  margin-left: -2.9rem;
  bottom: -0.6rem;
  color: #fff;
  text-align: center;
  line-height: 1rem;
