body
  background-color: #F8F1E8;
.container
  width: 100%;
  height: 100%;
.index
  padding-top: 0.3rem;
  padding-bottom: 1.28rem;
  box-sizing: border-box;
.global-tip
  font-size: 0.24rem;
  text-align: center;
  color: #000;
  white-space: nowrap;
.loading
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background: #ecf0f1;
  > img
    transform: scale(0.5);
// 新用户
.newuser
  box-sizing: border-box;
  .newuser-title
      margin: 0 auto;
      display: flex;
      justify-content: flex-start;
      align-items: center;
      width: 5.63rem;
      height: 1.38rem;
      font-family: PingFangSC-Regular;
      font-size: 0.32rem;
      color: #000000;
      letter-spacing: 0;
      background: url('http://dev-pet-avatar.oss-cn-beijing.aliyuncs.com/html5/15732906893776478301.png') no-repeat;
      background-size: 100% 100%
      -moz-background-size: 100% 100%
      -webkit-background-size: 100% 100%
      .title-avatar
        margin-left: 0.5rem;
        position: relative;
        > img:first-of-type
          width: 0.98rem;
          height: 0.98rem;
          border-radius: 0.59rem;
        > img:last-of-type
          position: absolute;
          right: 0;
          bottom: 0;
          width: 0.3rem;
          height: 0.3rem;
      .slogen
        display: flex;
        flex-direction: column;
        padding-left: 0.2rem;
        line-height: 0.45rem;
        color: #999999;
        > span:last-of-type
          font-size: 0.26rem;
          line-height: 0.37rem;
  .newuser-content
    position: relative;
    width: 6.66rem;
    height 3.76rem;
    padding-top: 4.6rem;
    box-sizing: border-box;
    font-family: PingFangSC-Regular;
    font-size: 0.28rem;
    color: #999999;
    letter-spacing: 0;
    margin: 0 auto;
    > img
      position: absolute;
      left: 0;
      top: 0.4rem;
      z-index: -1;
      width: 100%;
.newuser-form
  margin: 0 auto;
  width: 5.8rem;
  input
    font-size: 0.28rem;
.form-cellPhone,.form-imgcode,.form-code
  position: relative;
  padding-left: 0.3rem;
  box-sizing: border-box;
  width: 100%;
  height: 0.8rem;
  line-height: 0.8rem;
  background: #FFFFFF;
  box-shadow: 0 0.04rem 0.1rem 0 rgba(47,27,99,0.30);
  border-radius: 5px;
  margin-bottom: 0.2rem;
  > input
    width: 100%;
    height: 0.8rem;
.form-imgcode > img
  position: absolute;
  right: 0.07rem;
  top: 0.07rem;
  width: 1.73rem;
  height: 0.65rem;
.form-code > span
  position: absolute;
  right: 0;
  top: 0;
  width: 1.8rem;
  height: 0.8rem;
  line-height: 0.8rem;
  text-align: center;
  background-image: linear-gradient(0deg, #FE3B1F 0%, #FE3B1F 100%);
  border-radius: 0 4px 4px 0;
  font-size: 0.24rem;
  color: #FFFFFF;
  letter-spacing: -0.37px;
  &.grey
    background: #bbb;
.newuser-btn
  margin-top: 0.5rem;
  > img
    margin: 0 auto;
    width: 5.8rem;
// 老用户
.olduser-box
  margin: 0 auto;
  width: 6.9rem;
.olduser
  padding-top: 0.3rem;
  box-sizing: border-box;
  font-family: PingFangSC-Regular;
  font-size: 0.36rem;
  color: #333333;
  letter-spacing: 0;
  line-height: 0.6rem;
  > .olduserimg
    width: 6.72rem;
    height: 2.34rem;
    margin: 0 auto;
    > img 
        width: 100%;
        height 100%;
  > p
    text-align: center;
  > p:first-of-type
    margin-top: 0.3rem;
  > div
    margin: 0.56rem auto 0 auto;
    width: 5.8rem;
    cursor: pointer;
    > img
      width: 5.8rem;
      pointer-events: none;
.olduser-tip
  margin: 0.24rem auto 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  > img
    margin-right: 0.1rem;
    width: 0.6rem;
// 新人礼包
.xrlbbox
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 100%;
.footer-img-xrlb
  width: 7.5rem;
.xrlb
  flex: 1;
  margin: 0 auto;
  padding-top: 0.1rem;
  box-sizing: border-box;
  width: 6.9rem;
  min-height: 100%;
  text-align: center;
  > .newuserimg
    width: 80%;
    margin: 0 auto;
    > img 
        width: 100%;
.xrlb-title
  margin: 0 auto;
  width: 4.39rem;
.xrlb-btn
  margin: 0.4rem auto;
  width: 5.5rem;
.xrlb-content
  margin: 0 auto;
