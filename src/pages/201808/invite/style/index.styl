@import '~@/assets/style/mixins.styl'

.container
  width: 7.5rem;
  height: 100%;

.index
  position: relative;
  width: 100%;

// 头部
.header
  position: relative;
  width: 100%;
  min-height: 4rem;
  font-size: 0.28rem;
  > img
    width: 100%;
.header-tip
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 0.6rem;
  background: rgba(0,0,0,0.3);
  font-family: PingFangSC-Regular;
  font-size: 0.24rem;
  color: #fff;
  letter-spacing: 0;
.header-tip-swiper
  flex: 1;
  display: flex;
  align-items: center;
  height: 30px;
  > img
    padding: 0 0.1rem 0 0.2rem;
    width: 0.31rem;
    height: 0.31rem;
  // swiper
  .swiper-wrapper
    width: 100%;
    height: 30px!important;
  .swiper-slide
    width: 100%;
    height: 30px!important;
    .header-tip-swiper-item
      ellipsis();
      height: 30px;
      line-height: 30px;
.header-tip-icon
  position: relative;
  z-index: 2;
  flex-shrink: 0;
  > img
    width: 1.28rem;
// .header-bottom
//   width: 100%;
//   bottom: 0;
//   padding: 0 auto;
//   box-sizing: border-box;
//   background-color: #ffffff;
.header-btn
//   margin: 0.44rem auto;
  width: 100%;
  text-align: center;
  background-color: #ffffff;
  box-sizing: border-box;
  padding-top: 0.3rem; 
  padding-bottom: 0.6rem;
  >img
    display: inline-block;
    width: 5.8rem;
.header-time
  font-family: PingFangSC-Medium;
  font-size: 0.28rem;
  color: #FF3A1E;
  letter-spacing: 1px;
  text-shadow: 0 2px 20px rgba(132,1,1,0.23);
  white-space: nowrap;
  text-align: center;

// 邀请奖励
.yqjl
  margin-top: 0;
  overflow: hidden;
  .block-title
    padding: 0.2rem 0 0.2rem 0;
  .yqjl-coupon
    width: 6.93rem;
    height: 3.51rem;
    margin: 0 auto;
    > img 
        width: 100%;
        height 100%;
  .yqjl-title
    margin-top: 0.4rem;
    padding-left: 0.45rem;
    text-align: left;
    font-family: PingFangSC-Regular;
    font-size: 0.34rem;
    color: #484848;
    font-weight: bolder;
    letter-spacing: 1.25px;
  .yqjl-content
    display: flex;
    padding: 0.2rem 0.1rem 0.4rem 0.1rem;
    box-sizing: border-box;
    .task-item
      flex: 1;
      > img
        width: 100%;

.content-img
    width: 6.93rem;
    height: 3.51rem;
    margin: 0 auto;
    padding-bottom 1.5rem
    > img
        margin 0 auto
        width 100%

// 我的邀请战绩
.zj-content
  position: relative;
  display: flex;
  width: 100%;
  font-family: PingFangSC-Regular;
  font-size: 0.28rem;
  color: #333333;
  letter-spacing: 1.25px;
  > div
    flex-shrink: 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    > span
      display: inline-block;
      height: 0.4rem;
    .zj-num
      height: 1.12rem;
      line-height: 1.12rem;
      font-family: PingFangSC-Medium;
      color: #FE3B1F;
      letter-spacing: 1.61px;
      font-size: 0.8rem;
      > span
        font-size: 0.32rem;
  > div:last-of-type
    position: relative;
    &::before
      position: absolute;
      left: 0;
      top: 0.33rem;
      content: '';
      width: 1px;
      height: 0.5rem;
      background: #333333;
.zj-btn
  margin-top: 0.8rem;
  padding-bottom: 0.8rem;
  box-sizing: border-box;
  > img
    margin: 0 auto;
    margin-top: 0.2rem;
    width: 5.8rem;

// 参与流程
.lc-content
  padding-bottom: 0.8rem;
  > img
    margin: 0 auto;
    width: 6.55rem;

// 客服电话
.kf
  width: 100%;
  height: 0.98rem;
  line-height: 0.98rem;
  text-align: center;
  background: #F8F1E8;
  font-family: PingFangSC-Regular;
  font-size: 0.32rem;
  color: #333333;
  letter-spacing: 1.43px;
  > span:last-of-type
    color: #D0021B;
    text-decoration: underline;
