.container
  width: 7.5rem;
  height: 100%;

.prize
  position: relative;
  padding: 0.2rem;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #F8F1E8;
  font-size: 0.36rem;
  color: #fff;
  font-family: PingFangSC-Regular;

.clipboard
  cursor: pointer;
// 没有奖励
.empty
  padding-top: 3.2rem;
  box-sizing: border-box;
  width: 100%;
  > img
    margin: 0 auto;
    margin-bottom: 0.43rem;
    width: 1.1rem;
  > p
    text-align: center;
    color: #333333;
    letter-spacing: 0.05rem;

// 改版后的列表 20181024
.content1024
    padding 0.3rem 0
.item1024
    margin-bottom 0.4rem
.item1024-title
    text-align: center;
    font-size: 0.3rem;
    height: 0.6rem;
    line-height: 0.6rem;
    color: #000000;
.item1024-content
    display flex
    height 1.8rem
    background #fff
    color #000
    font-size 0.28rem
.item1024-left
    position relative
    width 2.2rem
    height 1.8rem
    > img
        width: 2.2rem
        height: 1.8rem
    > div
        position: absolute;
        left: 0;
        top: 0;
        width: 2.2rem;
        line-height: 1.75rem;
        text-align: center;
        color: #fff;
        > span
            font-family PingFangSC-Medium
            font-weight bold
            font-size 1rem
.item1024-right
    display: flex;
    height: 1.8rem;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 0 0.3rem;
    color: #000;
    font-size: 0.32rem;
    > div:last-of-type
        line-height: 0.6rem;
        font-size: 0.24rem;
        color: #666;


// 可用列表
.item-title
  text-align: center;
  font-size: 0.3rem;
  height: 0.5rem;
  color: #000000;
.item-content
  border-radius: 5px;
  box-shadow: 0 2px 20px 0 rgba(47,27,99,0.30);
  background-color: #fff;
  margin-bottom: 0.3rem;
.item-top
  position: relative;
  width: 100%;
  height: 1.75rem;
  > img
    width: 100%;
.item-top-left
  position: absolute;
  left: 0;
  top: 0;
  width: 2.5rem;
  line-height: 1.75rem;
  text-align: center;
  > span
    font-family: PingFangSC-Medium;
    font-size: 1rem;
    letter-spacing: -0.48px;
.item-top-right
  position: absolute;
  left: 2.8rem;
  top: 0;
  display: flex;
  height: 1.75rem;
  line-height: 0.5rem;
  flex-direction: column;
  justify-content: center;
  padding-right: 0.3rem;
.item-top-des
  line-height: 0.4rem;
  font-size: 0.28rem;
  letter-spacing: -0.37px;
.item-bottom
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0.3rem;
  box-sizing: border-box;
  width: 100%;
  height: 1.2rem;
  letter-spacing: -0.4px;
  font-size: 0.3rem;
.item-bottom-code
  flex-shrink: 0;
  padding: 0 0.2rem;
  box-sizing: border-box;
  width: 4.3rem;
  height: 0.6rem;
  line-height: 0.6rem;
  background: #F8F8F8;
  border: 0.01rem solid #EEEEEE;
  border-radius: 0.04rem;
  color: #333333;
.item-bottom-btn
  flex-shrink: 0;
  width: 1.8rem;
  height: 0.6rem;
  line-height: 0.6rem;
  text-align: center;
  background: #BB996C;
  border-radius: 0.04rem;
.active-btn
  padding-top: 0.3rem;
  > img
    margin: 0 auto;
    width: 4.22rem;
.active-tip
  margin-bottom: 0.6rem;
  font-size: 0.3rem;
  color: #000000;
  letter-spacing: -0.48px;
  text-align: center;
.used-title
  margin: 0.3rem 0 0.4rem 0;
  text-align: center;
  font-size: 0.32rem;
  letter-spacing: 0.04rem;
  > span
    display: flex;
    justify-content: center;
    align-items: center;
    color: #000;
    &:after,&:before
      content: '';
      width: 2rem;
      height: 1px;
      transform: scaleY(0.5);
      margin: 0 0.3rem;
      background: #000;
.used-item
  .item-content
    background: #f8f8f8;
  .item-bottom-btn
    background: #d1d1d1;
// 底部图片
.footer-img
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%