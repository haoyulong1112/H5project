@import '~@/assets/style/mixins.styl'

.video > video
  width: 7.5rem;
  height: 4.22rem;
  background: #000;

.index
  padding-bottom: 1.28rem;
  box-sizing: border-box;
  letter-spacing: 0;
  font-family: PingFangSC-Regular;

.index,.banner,.title,.content,.comment
  width: 7.5rem;

.banner,.title,.content,.comment
  background-color: #fff;

.banner img
  width: 7.5rem;

// title
.title
  padding: 0.22rem 0.3rem;
  box-sizing: border-box;
  > .title-text
    ellipsis-multi(2);
    font-family: PingFangSC-Medium;
    font-size: 0.36rem;
    font-weight: bold;
    color: #333333;
    > span
      height: 0.5rem;
      line-height: 0.5rem;
  > .title-author
    padding: 0.1rem 0;
    box-sizing: border-box;
    font-size: 0.24rem;
    color: #999999;
    avatar-name-righttext(0.4)
    > div > span
      padding: 0 0.1rem;
      box-sizing: border-box;
      font-size: 0.28rem;
      color: #333333;
  > .title-tags
    ellipsis-multi(2);
    margin-top: 0.1rem;
    font-size: 0.28rem;
    color: #BB996C;
    > span
      display: inline-block;
      height: 0.4rem;
      line-height: 0.4rem;
      margin-right: 0.3rem;

// content
.content
  padding: 0 0.3rem 0.2rem 0.3rem;
  box-sizing: border-box;
  font-size: 0.28rem;
  color: #333333;
  letter-spacing: -0.7px;
  text-align: justify;
  line-height: 0.5rem;
  > div
    margin-bottom: 0.2rem;
  img
    width: 100%;

// comment
.comment
  margin-top: 0.3rem;
  font-size: 0.28rem;
  color: #333333;
  > .comment-title
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 0.3rem;
    height: 1.08rem;
    box-shadow: inset 0 -1px 0 0 #EEEEEE;
    font-family: PingFangSC-Medium;
    font-size: 0.32rem;
    color: #000000;
    letter-spacing: -0.75px;
    > span:last-of-type
      font-size: 0.24rem;
      > span
        margin-left: 0.06rem;
  > .comment-list
    font-size: 14px;
    > .comment-item
      width: 7.5rem;
      > .comment-item-info
        padding: 0.3rem 0.3rem 0.2rem 0.3rem;
        box-sizing: border-box;
        avatar-name-righttext(0.48);
        > div > span
          padding: 0 0.2rem;
        > span
          font-size: 0.24rem;
          color: #999999;
      > .comment-item-content
        padding-left: 0.98rem;
        box-sizing: border-box;
        > div
          padding-bottom: 0.3rem;
          padding-right: 0.3rem;
          box-sizing: border-box;
          border-bottom: 1px solid #EEEEEE;
