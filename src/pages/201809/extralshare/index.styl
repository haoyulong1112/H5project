@import '~@/assets/style/mixins.styl'

.container
    width 100%
    height 100%

.index
    padding-bottom 1.28rem
    box-sizing border-box
    font-family PingFangSC-Regular

.banner
    width: 100%;
    box-sizing: border-box;
    overflow hidden;
    background #fff;
    padding-top: 0.2rem;
    padding-bottom: 0.3rem; 
.banner-box
    margin: 0 auto;
    border-radius 0.2rem
    width: 6.7rem;
    height 3.59rem
.swiper-container
    width: 100%;
    border-radius 0.2rem
    height 100%
.swiper-wrapper
    border-radius 0.2rem
    width: 100%;
    height 100%
.swiper-slide
    border-radius 0.2rem
    width: 100%;
    height 100%
.banner-swiper-item
    width 100%    
    height 100%
    border-radius 0.2rem
// 重置swiper指示器默认样式
.swiper-pagination-bullet
    margin 0 0.1rem!important
    width 0.14rem
    height 0.14rem
    border-radius 0.07rem
    background #fff
    opacity 1
.swiper-pagination-bullet-active
    background #D0021B!important
.swiper-pagination-bullets
    bottom 0.2rem
    text-align center

.title
    padding 0 0.2rem 0.3rem 0.2rem
    box-sizing border-box
    background #fff
    font-family PingFangSC-Medium
    font-size 0.36rem
    color #333333
    > div:first-of-type
        ellipsis-multi-lineheight(2, 0.5)
        display flex
        justify-content space-between
        > .span-left
            font-Medium-bold()
    > div:last-of-type
        margin-top 0.1rem
        font-size 0.24rem
        line-height 0.33rem
        color #999999
        letter-spacing 0.0117rem
.span-right
    font-size 0.24rem
    color #bb996c

.content
    margin-top 0.2rem
    > div:last-of-type img
        width 100%  
    > .title-content
        font-Medium-bold()
        font-family PingFangSC-Medium
        font-size 0.36rem
        color #333333
        line-height 0.5rem
        padding 0.2rem 0.2rem 0.2rem 0.2rem
        box-sizing border-box
        background #fff
.footer
    position fixed
    bottom 1.3rem
    height 0.98rem
    background-color #fff
    width 100%
    display flex
    justify-content space-between
    > .price
        padding-left 0.2rem
        height 0.98rem
        letter-spacing 0.0129rem
        >span:first-of-type
            font-size 0.36rem
            line-height 1rem
            height 100%
            display inline-block
            color #000000
            margin-right 0.05rem 
        >span:last-of-type
            line-height 1rem
            height 100%
            display inline-block
            font-size 0.24rem
            color #D0021B
