@import '~@/assets/style/mixins.styl'

.container
    width 100%
    height 100%

.index
    padding-bottom 1.28rem
    box-sizing border-box
    font-family PingFangSC-Regular

.banner
    padding 0.2rem 0.2rem 0.3rem 0.2rem
    background #fff
.banner-box
    overflow hidden
    border-radius 0.2rem
    box-shadow 0 0.04rem 0.2rem 0 rgba(0,0,0,0.3)
.banner-swiper-item
    width 100%
// 重置swiper指示器默认样式
.swiper-pagination-bullet
    margin 0 0.1rem!important
    width 0.14rem
    height 0.14rem
    border-radius 0.07rem
    background #fff
    opacity 1
.swiper-pagination-bullet-active
    background #D0021B!important
.swiper-pagination-bullets
    bottom 0.2rem
    text-align center

.title
    padding 0 0.2rem 0.3rem 0.2rem
    box-sizing border-box
    background #fff
    font-family PingFangSC-Medium
    font-size 0.36rem
    color #333333
    > div:first-of-type
        ellipsis-multi-lineheight(2, 0.5)
    > div:last-of-type
        ellipsis()
        margin-top 0.1rem
        font-size 0.24rem
        color #999999

.service
    padding 0.2rem 0
.service-item
    display flex
    justify-content space-between
    align-items center
    background #fff
    height 1.3rem
    > div
        display flex
        align-items center
        white-space nowrap
    > div:first-of-type
        padding-left 0.2rem
        overflow hidden
    > div:last-of-type
        padding 0 0.2rem
        justify-content flex-end
.service-icon
    flex-shrink 0
    > img
        width 0.88rem
.service-title
    flex 1
    margin-left 0.2rem
    overflow hidden
    font-family PingFangSC-Medium
    font-size 0.36rem
    color #333333
    font-weight bold
    line-height 0.5rem
    > div
        ellipsis()
    > div:last-of-type
        margin-top 0.04rem
        line-height 0.33rem
        font-size 0.24rem
        color #666666
.service-price
    margin-right 0.2rem
    text-align right
    font-family PingFangSC-Medium
    font-size 0.24rem
    color #333
    span
        font-size 0.28rem
        color #151515
        line-height 0.3rem
    > div:first-of-type
        color #D0021B
        span
            color #D0021B
.service-btn
    flex-shrink 0
    width 1.2rem
    height 0.6rem
    line-height 0.6rem
    background-image linear-gradient(90deg, #D0021B 0%, #EB6340 100%)
    border-radius 0.3rem
    text-align center
    font-size 0.3rem
    color #FFFFFF

.tab
    display flex
    align-items center
    height 1rem
    background #fff
    font-size 0.28rem
    color #000000
    > div
        flex 1
        text-align center
    > .active
        display flex
        flex-direction column
        align-items center
        font-family PingFangSC-Medium
        font-size 0.3rem
        font-weight bold
        &:after
            content ''
            margin 0.02rem 0
            width 0.6rem
            height 0.04rem
            background-image linear-gradient(90deg, #EB6340 0%, #E5287B 100%)

.content
    > div:not(:last-of-type) img
        width 100%
