@import '~@/assets/style/mixins.styl'

.list
    background #fff
.item
    padding-top 0.2rem
    background #f8f8f8
    > div
        display flex
        justify-content space-between
        align-items center
        padding 0 0.3rem 0 0.4rem
        height 1.5rem
        background #fff
        > div:nth-child(1)
            display flex
            align-items center
.tool-img > img
    width 0.9rem
.tool-text
    margin-left 0.3rem
    line-height 0.45rem
    font-size 0.32rem
    color #333
    > div:nth-child(2)
        margin-top 0.12rem
        font-size 0.24rem
        color #666

